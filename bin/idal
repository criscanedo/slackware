#!/bin/bash

kircdir="$LOG_DIR/kirc"
dalnetdir="$kircdir/dalnet"
logfile="$dalnetdir/$(date -I).log"
waitconnect="wait 30000"
identnick="privmsg nickserv@services.dal.net :identify $NICK $(dalnetpass)"
identchan="privmsg chanserv@services.dal.net :identify bitmatrix $(bmatrixpass)"
waitident="wait 5000"

# run kirc
kirc -s irc.dal.net \
	-p 6667 \
	-c bitmatrix \
	-n $NICK \
	-x $identnick \
	-x $waitident \
	-x $identchan \
	-x $waitident \
	-o $logfile \
